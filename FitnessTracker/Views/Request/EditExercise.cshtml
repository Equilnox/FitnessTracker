@model EditExerciseFormModel

@{
	ViewBag.Title = "Send a request to edit exercise data";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row-cols-1">
	<form method="post">
		<div class="row">	
			<div class="col">
				<div class="form-group">
					<label asp-for="Name"></label>
					<input asp-for="Name" class="form-control" type="text" value="@Model.Name" readonly>
				</div>
				<div class="form-group">
					<label asp-for="Description"></label>
					<input asp-for="Description" class="form-control" type="text" value="@Model.Description" readonly>
				</div>
				<div class="form-group visually-hidden">
					<label asp-for="Id"></label>
					<input asp-for="Id" class="form-control" type="text" rows="3" value="@Model.Id" readonly>
				</div>
			</div>
		</div>
		<hr />
		<div class="row">
			<div class="col">
				<div class="form-group">
					<label asp-for="NewName"></label>
					<input asp-for="NewName" class="form-control" type="text" placeholder="@Model.NewName">
					<span asp-validation-for="NewName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="NewDescription"></label>
					<input asp-for="NewDescription" class="form-control" type="text" placeholder="@Model.NewDescription">
					<span asp-validation-for="NewDescription" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div></div>
		<hr />
		<div></div>
		<div>
			<div class="d-grid gap-5 d-md-flex justify-content-md-center">
				<input class="btn btn-light btn-outline-dark btn-toolbar" type="submit" value="Save request" />
			</div>
		<div />
	</form>
</div>

@section Scripts {
	<partial-name ="_ValidationScriptsPartial" />
}